<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bs.manage.mapper.customer.CustomerShopAuthMapper">

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
		insert into customer_shop_auth
			(customer_shop_id,auth_type,platform,expire_time,brand_id,
			brand_name,link,data_id,data_name,created_at,
			updated_at)
		values
			(#{customer_shop_id},#{auth_type},#{platform},#{expire_time},#{brand_id},
			#{brand_name},#{link},#{data_id},#{data_name},#{created_at},
			#{updated_at})
	</insert>

    <insert id="insertBatch" useGeneratedKeys="true" keyProperty="id">
        insert into customer_shop_auth
        (customer_shop_id,auth_type,platform,expire_time,brand_id,
        brand_name,link,data_id,data_name,created_at,
        updated_at)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.customer_shop_id},#{item.auth_type},#{item.platform},#{item.expire_time},#{item.brand_id},
            #{item.brand_name},#{item.link},#{item.data_id},#{item.data_name},#{item.created_at},
            #{item.updated_at})
        </foreach>
    </insert>

    <delete id="delete">
		delete from customer_shop_auth where id = #{id}
	</delete>

    <delete id="deleteByIds">
        delete from customer_shop_auth where id in
        <foreach collection="list" item="item" separator="," open="(" close=")">
            #{item}
        </foreach>
    </delete>

    <update id="update">
        update customer_shop_auth
        <set>
            <if test="customer_shop_id != null ">
                customer_shop_id = #{customer_shop_id},
            </if>
            <if test="auth_type != null ">
                auth_type = #{auth_type},
            </if>
            <if test="platform != null and platform !='' ">
                platform = #{platform},
            </if>
            <if test="expire_time != null ">
                expire_time = #{expire_time},
            </if>
            <if test="brand_id != null ">
                brand_id = #{brand_id},
            </if>
            <if test="brand_name != null and brand_name !='' ">
                brand_name = #{brand_name},
            </if>
            <if test="link != null and link !='' ">
                link = #{link},
            </if>
            <if test="data_id != null ">
                data_id = #{data_id},
            </if>
            <if test="data_name != null and data_name !='' ">
                data_name = #{data_name},
            </if>
            <if test="updated_at != null ">
                updated_at = #{updated_at},
            </if>

        </set>
        where id = #{id}
    </update>

    <update id="updateBatch">
        <foreach collection="list" item="item" separator=";">
            update customer_shop_auth
            <set>
                <if test="item.customer_shop_id != null ">
                    customer_shop_id = #{item.customer_shop_id},
                </if>
                <if test="item.auth_type != null ">
                    auth_type = #{item.auth_type},
                </if>
                <if test="item.platform != null and item.platform !='' ">
                    platform = #{item.platform},
                </if>
                <if test="item.expire_time != null ">
                    expire_time = #{item.expire_time},
                </if>
                <if test="item.brand_id != null ">
                    brand_id = #{item.brand_id},
                </if>
                <if test="item.brand_name != null and item.brand_name !='' ">
                    brand_name = #{item.brand_name},
                </if>
                <if test="item.link != null and item.link !='' ">
                    link = #{item.link},
                </if>
                <if test="item.data_id != null ">
                    data_id = #{item.data_id},
                </if>
                <if test="item.data_name != null and item.data_name !='' ">
                    data_name = #{item.data_name},
                </if>
                <if test="item.updated_at != null ">
                    updated_at = #{item.updated_at},
                </if>

            </set>
            where id = #{item.id}
        </foreach>
    </update>

    <select id="getById" resultType="customerShopAuth">
		select
			id,customer_shop_id,auth_type,platform,expire_time,
			brand_id,brand_name,link,data_id,data_name,
			created_at,updated_at
		from customer_shop_auth
		where id = #{id}
	</select>

    <select id="getAll" resultType="customerShopAuth">
		select
			id,customer_shop_id,auth_type,platform,expire_time,
			brand_id,brand_name,link,data_id,data_name,
			created_at,updated_at
		from customer_shop_auth
	</select>

    <select id="getOneBySelectKey" resultType="customerShopAuth">
        select
        id,customer_shop_id,auth_type,platform,expire_time,
        brand_id,brand_name,link,data_id,data_name,
        created_at,updated_at
        from customer_shop_auth
        where 1 = 1
        <if test="customer_shop_id != null">
            and customer_shop_id = #{customer_shop_id}
        </if>
        <if test="auth_type != null">
            and auth_type = #{auth_type}
        </if>
        <if test="platform != null and platform !=''">
            and platform = #{platform}
        </if>
        <if test="expire_time != null">
            and expire_time = #{expire_time}
        </if>
        <if test="brand_id != null">
            and brand_id = #{brand_id}
        </if>
        <if test="brand_name != null and brand_name !=''">
            and brand_name = #{brand_name}
        </if>
        <if test="link != null and link !=''">
            and link = #{link}
        </if>
        <if test="data_id != null">
            and data_id = #{data_id}
        </if>
        <if test="data_name != null and data_name !=''">
            and data_name = #{data_name}
        </if>
        <if test="created_at != null">
            and created_at = #{created_at}
        </if>
        <if test="updated_at != null">
            and updated_at = #{updated_at}
        </if>

        limit 1
    </select>

    <select id="getAllBySelectKey" resultType="customerShopAuth">
        select
        id,customer_shop_id,auth_type,platform,expire_time,
        brand_id,brand_name,link,data_id,data_name,
        created_at,updated_at
        from customer_shop_auth
        where 1 = 1
        <if test="customer_shop_id != null">
            and customer_shop_id = #{customer_shop_id}
        </if>
        <if test="auth_type != null">
            and auth_type = #{auth_type}
        </if>
        <if test="platform != null and platform !=''">
            and platform = #{platform}
        </if>
        <if test="expire_time != null">
            and expire_time = #{expire_time}
        </if>
        <if test="brand_id != null">
            and brand_id = #{brand_id}
        </if>
        <if test="brand_name != null and brand_name !=''">
            and brand_name = #{brand_name}
        </if>
        <if test="link != null and link !=''">
            and link = #{link}
        </if>
        <if test="data_id != null">
            and data_id = #{data_id}
        </if>
        <if test="data_name != null and data_name !=''">
            and data_name = #{data_name}
        </if>
        <if test="created_at != null">
            and created_at = #{created_at}
        </if>
        <if test="updated_at != null">
            and updated_at = #{updated_at}
        </if>

    </select>

    <select id="getNearExpireAuth" resultType="notifyCustomerAuth">
        select
        a.customer_shop_id,b.name as customer_name,a.brand_id,a.brand_name,a.link,
        a.auth_type,a.platform,a.expire_time,0 as has_read,
        case b.process_user_id when 0 then #{userId} else b.process_user_id end as notify_user
        from customer_shop_auth a
        inner join customer b on b.id = a.customer_shop_id
        where DATE(expire_time) = #{notifyDate}
    </select>

</mapper>