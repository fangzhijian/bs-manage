        kpi_goal,oneself_deal,actual_deal,weight,oneself_score,superior_score,
        created_at,updated_at
        from kpi_content
        where 1 = 1
        <if test="kpi_id != null">
            and kpi_id = #{kpi_id}
        </if>
        <if test="kpi_type != null and kpi_type !=''">
            and kpi_type = #{kpi_type}
        </if>
        <if test="kpi_label != null and kpi_label !=''">
            and kpi_label = #{kpi_label}
        </if>
        <if test="kpi_content != null and kpi_content !=''">
            and kpi_content = #{kpi_content}
        </if>
        <if test="kpi_goal != null and kpi_goal !=''">
            and kpi_goal = #{kpi_goal}
        </if>
        <if test="oneself_deal != null and oneself_deal !=''">
            and oneself_deal = #{oneself_deal}
        </if>
        <if test="actual_deal != null and actual_deal !=''">
            and actual_deal = #{actual_deal}
        </if>
        <if test="weight != null">
            and weight = #{weight}
        </if>
        <if test="oneself_score != null">
            and oneself_score = #{oneself_score}
        </if>
        <if test="superior_score != null">
            and superior_score = #{superior_score}
        </if>
        <if test="created_at != null">
            and created_at = #{created_at}
        </if>
        <if test="updated_at != null">
            and updated_at = #{updated_at}
        </if>

    </select>

    <delete id="deleteByKpiId">
		delete from kpi_content where kpi_id = #{kpiId}
	</delete>

</mapper>