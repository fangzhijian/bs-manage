<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bs.manage.mapper.customer.CustomerLevelMapper">


    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into customer_level (name,created_at,updated_at)values (#{name},#{created_at},#{updated_at})
    </insert>

    <update id="delete">
        update customer_level set delete_status = 1,deleted_at = #{deleted_at} where id = #{id}
    </update>

    <update id="update">
        update customer_level
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="updated_at != null">
                updated_at = #{updated_at},
            </if>
        </set>
        where id = #{id}
    </update>

    <select id="getAll" resultType="customerLevel">
        select id,name from customer_level where delete_status = 0
    </select>

</mapper>