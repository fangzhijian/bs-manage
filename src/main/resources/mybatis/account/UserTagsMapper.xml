<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bs.manage.mapper.account.UserTagsMapper">

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
		insert into user_tags_customer
			(user_id,name,created_at,updated_at)
		values
			(#{user_id},#{name},#{created_at},#{updated_at})
	</insert>



    <update id="delete">
		delete from user_tags_customer where id = #{id}
	</update>


    <update id="update">
        update user_tags_customer
        <set>
            <if test="user_id != null">
                user_id = #{user_id},
            </if>
            <if test="name != null and name !=''">
                name = #{name},
            </if>
            <if test="updated_at != null">
                updated_at = #{updated_at},
            </if>

        </set>
        where id = #{id}
    </update>

    <select id="getById" resultType="userTags">
		select
			id,user_id,name,created_at,updated_at
		from user_tags_customer
		where id = #{id}
	</select>

    <select id="getAll" resultType="userTags">
		select
			id,user_id,name,created_at,updated_at
		from user_tags_customer
	</select>

    <select id="getOneBySelectKey" resultType="userTags">
        select
        id,user_id,name,created_at,updated_at
        from user_tags_customer
        where 1 = 1
        <if test="user_id != null">
            and user_id = #{user_id}
        </if>
        <if test="name != null and name !=''">
            and name = #{name}
        </if>
        <if test="created_at != null">
            and created_at = #{created_at}
        </if>
        <if test="updated_at != null">
            and updated_at = #{updated_at}
        </if>

        limit 1
    </select>

    <select id="getAllBySelectKey" resultType="userTags">
        select
        id,user_id,name,created_at,updated_at
        from user_tags_customer
        where 1 = 1
        <if test="user_id != null">
            and user_id = #{user_id}
        </if>
        <if test="name != null and name !=''">
            and name = #{name}
        </if>
        <if test="created_at != null">
            and created_at = #{created_at}
        </if>
        <if test="updated_at != null">
            and updated_at = #{updated_at}
        </if>

    </select>

</mapper>