<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bs.manage.mapper.customer.CustomerBindLogMapper">

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
		insert into customer_bind_log
			(customer_id,user_id,created_at,action,updated_at)
		values
			(#{customer_id},#{user_id},#{created_at},#{action},#{updated_at})
	</insert>

    <insert id="insertBatch" useGeneratedKeys="true" keyProperty="id">
        insert into customer_bind_log
        (customer_id,user_id,created_at,action,updated_at)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.customer_id},#{item.user_id},#{item.created_at},#{item.action},#{item.updated_at})
        </foreach>
    </insert>

    <delete id="delete">
		delete from customer_bind_log where id = #{id}
	</delete>

    <delete id="deleteByIds">
        delete from customer_bind_log where id in
        <foreach collection="list" item="item" separator="," open="(" close=")">
            #{item}
        </foreach>
    </delete>

    <update id="update">
        update customer_bind_log
        <set>
            <if test="customer_id != null ">
                customer_id = #{customer_id},
            </if>
            <if test="user_id != null ">
                user_id = #{user_id},
            </if>
            <if test="action != null ">
                action = #{action},
            </if>
            <if test="updated_at != null ">
                updated_at = #{updated_at},
            </if>

        </set>
        where id = #{id}
    </update>

    <update id="updateBatch">
        <foreach collection="list" item="item" separator=";">
            update customer_bind_log
            <set>
                <if test="item.customer_id != null ">
                    customer_id = #{item.customer_id},
                </if>
                <if test="item.user_id != null ">
                    user_id = #{item.user_id},
                </if>
                <if test="item.action != null ">
                    action = #{item.action},
                </if>
                <if test="item.updated_at != null ">
                    updated_at = #{item.updated_at},
                </if>

            </set>
            where id = #{item.id}
        </foreach>
    </update>

    <select id="getById" resultType="customerBindLog">
		select
			id,customer_id,user_id,created_at,action,
			updated_at
		from customer_bind_log
		where id = #{id}
	</select>

    <select id="getAll" resultType="customerBindLog">
		select
			id,customer_id,user_id,created_at,action,
			updated_at
		from customer_bind_log
	</select>

    <select id="getOneBySelectKey" resultType="customerBindLog">
        select
        id,customer_id,user_id,created_at,action,
        updated_at
        from customer_bind_log
        where 1 = 1
        <if test="customer_id != null">
            and customer_id = #{customer_id}
        </if>
        <if test="user_id != null">
            and user_id = #{user_id}
        </if>
        <if test="created_at != null">
            and created_at = #{created_at}
        </if>
        <if test="action != null">
            and action = #{action}
        </if>
        <if test="updated_at != null">
            and updated_at = #{updated_at}
        </if>

        limit 1
    </select>

    <select id="getAllBySelectKey" resultType="customerBindLog">
        select
        id,customer_id,user_id,created_at,action,
        updated_at
        from customer_bind_log
        where 1 = 1
        <if test="customer_id != null">
            and customer_id = #{customer_id}
        </if>
        <if test="user_id != null">
            and user_id = #{user_id}
        </if>
        <if test="created_at != null">
            and created_at = #{created_at}
        </if>
        <if test="action != null">
            and action = #{action}
        </if>
        <if test="updated_at != null">
            and updated_at = #{updated_at}
        </if>

    </select>

    <select id="getNearBindForCustomerIds" resultType="customerBindLog">
        <foreach collection="list" item="item" separator="UNION ALL ">
            (select
               created_at,id,customer_id,user_id,action,updated_at
            from customer_bind_log
            where customer_id = #{item} ORDER BY created_at desc LIMIT 1)
        </foreach>

    </select>

</mapper>