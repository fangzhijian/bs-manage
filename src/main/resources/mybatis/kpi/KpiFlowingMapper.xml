<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bs.manage.mapper.kpi.KpiFlowingMapper">

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
		insert into kpi_flowing
			(kpi_id,status,operate_user,created_at,updated_at)
		values
			(#{kpi_id},#{status},#{operate_user},#{created_at},#{updated_at})
	</insert>

    <insert id="insertBatch" useGeneratedKeys="true" keyProperty="id">
        insert into kpi_flowing
        (kpi_id,status,operate_user,created_at,updated_at)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.kpi_id},#{item.status},#{item.operate_user},#{item.created_at},#{item.updated_at})
        </foreach>
    </insert>

    <delete id="delete">
		delete from kpi_flowing where id = #{id}
	</delete>

    <delete id="deleteByIds">
        delete from kpi_flowing where id in
        <foreach collection="list" item="item" separator="," open="(" close=")">
            #{item}
        </foreach>
    </delete>

    <update id="update">
        update kpi_flowing
        <set>
            <if test="kpi_id != null ">
                kpi_id = #{kpi_id},
            </if>
            <if test="status != null ">
                status = #{status},
            </if>
            <if test="operate_user != null and operate_user !='' ">
                operate_user = #{operate_user},
            </if>
            <if test="updated_at != null ">
                updated_at = #{updated_at},
            </if>

        </set>
        where id = #{id}
    </update>

    <update id="updateBatch">
        <foreach collection="list" item="item" separator=";">
            update kpi_flowing
            <set>
                <if test="item.kpi_id != null ">
                    kpi_id = #{item.kpi_id},
                </if>
                <if test="item.status != null ">
                    status = #{item.status},
                </if>
                <if test="item.operate_user != null and item.operate_user !='' ">
                    operate_user = #{item.operate_user},
                </if>
                <if test="item.updated_at != null ">
                    updated_at = #{item.updated_at},
                </if>

            </set>
            where id = #{item.id}
        </foreach>
    </update>

    <select id="getById" resultType="kpiFlowing">
		select
			id,kpi_id,status,operate_user,created_at,
			updated_at
		from kpi_flowing
		where id = #{id}
	</select>

    <select id="getAll" resultType="kpiFlowing">
		select
			id,kpi_id,status,operate_user,created_at,
			updated_at
		from kpi_flowing
	</select>

    <select id="getOneBySelectKey" resultType="kpiFlowing">
        select
        id,kpi_id,status,operate_user,created_at,
        updated_at
        from kpi_flowing
        where 1 = 1
        <if test="kpi_id != null">
            and kpi_id = #{kpi_id}
        </if>
        <if test="status != null">
            and status = #{status}
        </if>
        <if test="operate_user != null and operate_user !=''">
            and operate_user = #{operate_user}
        </if>
        <if test="created_at != null">
            and created_at = #{created_at}
        </if>
        <if test="updated_at != null">
            and updated_at = #{updated_at}
        </if>

        limit 1
    </select>

    <select id="getAllBySelectKey" resultType="kpiFlowing">
        select
        id,kpi_id,status,operate_user,created_at,
        updated_at
        from kpi_flowing
        where 1 = 1
        <if test="kpi_id != null">
            and kpi_id = #{kpi_id}
        </if>
        <if test="status != null">
            and status = #{status}
        </if>
        <if test="operate_user != null and operate_user !=''">
            and operate_user = #{operate_user}
        </if>
        <if test="created_at != null">
            and created_at = #{created_at}
        </if>
        <if test="updated_at != null">
            and updated_at = #{updated_at}
        </if>

    </select>

</mapper>